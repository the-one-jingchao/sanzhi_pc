.t-home
  box-sizing border-box
  position relative
  width: 100%;
  padding 0 0 70px 0;
  .t-section
    box-sizing border-box
    position relative
    padding 40px 0;
    height: auto
    &.bg1
      background: #fff9f5
      border-radius 20px
    &.bg2
      background: #f5f5f5;
      border-radius 20px
    &.bg3
      background: #ffb850;
      border-radius 20px
      color #FFFFFF;


    .t-title
      text-align center;
      font-weight bold;
      font-size 30px
    .t-desc
      font-size 20px;
      color #8f8f8f;
      box-sizing border-box
      padding 20px 0 40px 0;
      text-align center
    .t-flex
      display flex
      width: 100%;
      flex-wrap wrap;
      flex-direction row
      justify-content space-between
      .t-f1
        width: 48%;
        text-align center
        height: 200px
        box-sizing border-box;
        position relative
        .t-f1-img
          box-sizing border-box;
          height: 100px
          img
            width: 100px
            height: 100px
        .t-f1-title
          padding 14px 0 0 0;
          box-sizing border-box;
          font-size 24px;
          line-height 32px;
        .t-f1-desc
          padding 14px 0 0 0;
          box-sizing border-box;
          font-size 16px;
          line-height 20px;
          color #8f8f8f

    .t-table
      box-sizing border-box;
      position relative;
      padding 0 0 30px 0;
      border-radius 15px;
      background: #ffb850;
      .t-head
        display flex;
        border-radius 15px 15px 0 0;
        background: #ffb850
        flex-direction row;
        .t-head-cont
          flex 1;
          font-size 24px;
          font-weight bold;
          color #FFFFFF;
          height: 80px
          line-height 80px;
          text-align center
          background: #ffb850;
          border-right 1px solid #FFFFFF;
          box-sizing border-box;
          &.w350
            flex 2
          &.w300
            flex 1.5
          &.w150
            flex 0.8;
          &.first
            border-radius 15px 0 0 0;
          &.end
            border-radius 0 15px 0 0;
            border-right none;
      .t-body
        width: 100%;
        height: 150px
        display flex;
        flex-direction row;
        background: #FFFFFF;
        box-sizing border-box;
        font-weight normal
        font-size 18px;
        align-items center
        align-content center
        flex-grow 1;
        justify-content center;
        justify-items center
        vertical-align middle
        .t-body-cont
          flex 1;
          height 100%;
          padding 0;
          box-sizing border-box
          position relative
          text-align center;
          border-right 1px dashed #fe6b00;
          .block
            display block;
            width: 100%;
            box-sizing border-box;
            padding 20px;
            height: 100%
          &.w350
            flex 2
          &.w300
            flex 1.5
            text-align left
          &.w150
            flex 0.8;
          &.first
            font-weight bold
          &.end
            border-right none;
            text-align left
        &.bg
          background: #feeed5;



    .t-serve
      width: 100%;
      box-sizing border-box;
      padding 60px 0 0 0;
      display flex
      flex-wrap wrap;
      flex-direction row
      justify-content space-between;
      .t-s-card
        width: 240px
        height: auto
        text-align center;
        box-sizing border-box;
        box-shadow 0 0 4px 1px rgba(188, 187, 187, 0.5);
        padding 40px 20px;
        cursor pointer;
        transition all .35s;
        border-radius 14px;
        &:hover
          transform scale(1.1);
          box-shadow 0 0 4px 1px rgba(188, 187, 187, 0.9);
        .t-s-img
          text-align center
          height: 80px
          img
            width: 80px
            height: 80px
        .t-s-title
          font-weight bold
          font-size 24px
          box-sizing border-box;
          padding 40px 0 20px 0;
        .t-s-desc
          text-align left
          word-break break-all
          white-space normal
          font-size 18px;
          color #535353


    .t-us
      width: 100%
      box-sizing border-box;
      position relative;
      padding 40px;
      display flex;
      flex-direction row
      .t-us-f
        flex 2;
        box-sizing border-box
        position relative
        &.f2
          flex 3
        .t-us-label
          position relative
          font-size 18px;
          box-sizing border-box
          padding 10px 0
          color #fafafa
          .line
            display inline-block;
            position absolute
            width: 60px;
            height: 3px
            border-radius 2px;
            background: #fc7e23;
            bottom: -4px
            left: 0
        .l-us-title
          font-size 28px;
          text-align center
          font-weight bold
          box-sizing border-box
          padding 80px 0 40px 0;
          color #FFFFFF
        .l-us-tel
          font-size 18px;
          color #FFFFFF
          text-align center;

