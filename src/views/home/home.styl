.t-home
  box-sizing border-box
  position relative
  width: 100%;
  .t-section
    box-sizing border-box
    position relative
    padding 40px 0;
    height: auto
    &.bg1
      background: #fff9f5
      border-radius 20px

    .t-title
      text-align center;
      font-weight bold;
      font-size 30px
    .t-desc
      font-size 20px;
      color #8f8f8f;
      box-sizing border-box
      padding 20px 0 40px 0;
      text-align center
    .t-flex
      display flex
      width: 100%;
      flex-wrap wrap;
      flex-direction row
      justify-content space-between
      .t-f1
        width: 48%;
        text-align center
        height: 200px
        box-sizing border-box;
        position relative
        .t-f1-img
          box-sizing border-box;
          height: 100px
          img
            width: 100px
            height: 100px
        .t-f1-title
          padding 14px 0 0 0;
          box-sizing border-box;
          font-size 24px;
          line-height 32px;
        .t-f1-desc
          padding 14px 0 0 0;
          box-sizing border-box;
          font-size 16px;
          line-height 20px;
          color #8f8f8f

    .t-table
      box-sizing border-box;
      position relative;
      padding 0 0 30px 0;
      border-radius 15px;
      background: #ffb850;
      .t-head
        display flex;
        border-radius 15px 15px 0 0;
        background: #ffb850
        flex-direction row;
        .t-head-cont
          flex 1;
          font-size 24px;
          font-weight bold;
          color #FFFFFF;
          height: 80px
          line-height 80px;
          text-align center
          background: #ffb850;
          border-right 1px solid #FFFFFF;
          box-sizing border-box;
          &.w350
            flex 2
          &.w300
            flex 1.5
          &.w150
            flex 0.8;
          &.first
            border-radius 15px 0 0 0;
          &.end
            border-radius 0 15px 0 0;
            border-right none;
      .t-body
        width: 100%;
        height: 150px
        display flex;
        flex-direction row;
        background: #FFFFFF;
        box-sizing border-box;
        font-weight normal
        font-size 18px;
        align-items center
        align-content center
        flex-grow 1;
        justify-content center;
        justify-items center
        vertical-align middle
        .t-body-cont
          flex 1;
          height 100%;
          padding 0;
          box-sizing border-box
          position relative
          text-align center;
          border-right 1px dashed #fe6b00;
          .block
            display block;
            width: 100%;
            box-sizing border-box;
            padding 20px;
            height: 100%
          &.w350
            flex 2
          &.w300
            flex 1.5
            text-align left
          &.w150
            flex 0.8;
          &.first
            font-weight bold
          &.end
            border-right none;
            text-align left
        &.bg
          background: #feeed5;


