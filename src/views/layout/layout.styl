.t-container
  width: 100%;
  height: 100%;
  position relative;
  box-sizing border-box;
  min-width 1240px;
  overflow auto;
  padding 60px 0 0 0;

  .t-header
    min-width 1240px;
    width: 100%;
    position fixed;
    left: 0;
    right: 0;
    top: 0
    margin 0 auto;
    height: 60px;
    box-sizing border-box;
    background: #FFFFFF;
    border-bottom 1px solid #e9e9e9;
    z-index 9999998;
    box-shadow 0 0 8px 1px rgba(233, 233, 233, 0.9)

  .t-layout-swiper
    width: 100%;
    box-sizing border-box;
    position relative
    height: 600px;

  .t-layout
    height auto
    position relative
    min-width 1240px;
    box-sizing border-box;
    width: 100%;

    .t-layout-container
      width: 1240px;
      padding 0 20px;
      margin 0 auto;
      height: 100%;
      box-sizing border-box;
      position relative


::-webkit-scrollbar
  width 0px
::-webkit-scrollbar:horizontal
  height 0px
::-webkit-scrollbar-thumb
  width 0px
  height 0px
  background-color #a8d9ff
  border-radius 6px
.t-container::-webkit-scrollbar-track
  width 0px
  background #37a9ff
  border-radius 4px
.t-container::-webkit-scrollbar-corner
  display none
